    <script>
      document.addEventListener("DOMContentLoaded", () => {
        // --- SAFE SCRIPT FOR MOBILE MENU ---
        const mobileMenuButton = document.getElementById("mobile-menu-button");
        const mobileMenu = document.getElementById("mobile-menu");

        // Check if both elements exist before adding listeners
        if (mobileMenuButton && mobileMenu) {
          mobileMenuButton.addEventListener("click", () => {
            mobileMenu.classList.toggle("hidden");
          });

          const mobileMenuLinks = mobileMenu.querySelectorAll("a");
          mobileMenuLinks.forEach((link) => {
            link.addEventListener("click", () => {
              mobileMenu.classList.add("hidden");
            });
          });
        }

        // --- SAFE SCRIPT FOR FAQ SECTION ---
        const faqQuestions = document.querySelectorAll(".faq-question");

        faqQuestions.forEach((question) => {
          // Find related elements
          const answer = question.nextElementSibling;
          const iconContainer = question.querySelector(".faq-icon");

          // We need to ensure the elements are the correct type for the script to work
          if (answer instanceof HTMLElement && iconContainer) {
            const plusIcon = iconContainer.querySelector(".plus-icon");
            const minusIcon = iconContainer.querySelector(".minus-icon");
            const parentContainer = question.parentElement;

            // Check if all parts were found before adding the click event
            if (plusIcon && minusIcon && parentContainer) {
              question.addEventListener("click", () => {
                const isAnswerOpen =
                  answer.style.maxHeight && answer.style.maxHeight !== "0px";

                // Close all other open answers
                document.querySelectorAll(".faq-answer").forEach((ans) => {
                  if (ans instanceof HTMLElement && ans !== answer) {
                    ans.style.maxHeight = "0px";
                    const otherIconContainer =
                      ans.previousElementSibling?.querySelector(".faq-icon");
                    const otherParent = ans.parentElement;

                    if (otherIconContainer && otherParent) {
                      const otherPlus =
                        otherIconContainer.querySelector(".plus-icon");
                      const otherMinus =
                        otherIconContainer.querySelector(".minus-icon");
                      if (
                        otherPlus instanceof HTMLElement &&
                        otherMinus instanceof HTMLElement
                      ) {
                        otherPlus.style.opacity = "1";
                        otherMinus.style.opacity = "0";
                      }
                      otherParent.classList.remove("bg-blue-50");
                    }
                  }
                });

                // Toggle the clicked answer
                if (isAnswerOpen) {
                  answer.style.maxHeight = "0px";
                  (plusIcon as HTMLElement).style.opacity = "1";
                  (minusIcon as HTMLElement).style.opacity = "0";
                  parentContainer.classList.remove("bg-blue-50");
                } else {
                  answer.style.maxHeight = answer.scrollHeight + "px";
                  (plusIcon as HTMLElement).style.opacity = "0";
                  (minusIcon as HTMLElement).style.opacity = "1";
                  parentContainer.classList.add("bg-blue-50");
                }
              });
            }
          }
        });

        // --- SAFE SCRIPT FOR FLOATING WHATSAPP BUTTON ---
        const whatsappFab = document.getElementById("whatsapp-fab");

        // Check if the button exists
        if (whatsappFab) {
          // Function to check scroll position
          const toggleFab = () => {
            if (window.scrollY > 400) {
              // Show the button
              whatsappFab.classList.remove("opacity-0", "translate-y-4");
            } else {
              // Hide the button
              whatsappFab.classList.add("opacity-0", "translate-y-4");
            }
          };

          // Listen for scroll events
          window.addEventListener("scroll", toggleFab);

          // Check on page load in case the page is already scrolled
          toggleFab();
        }
      });
    </script>
